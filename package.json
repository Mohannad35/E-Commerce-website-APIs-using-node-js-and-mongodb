		"@logtail/node": "^0.2.2",
		"@logtail/winston": "^0.3.1",
		"@sendgrid/mail": "^7.7.0",
		"@sentry/node": "^7.54.0",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"config": "^3.3.9",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"debug": "^4.3.4",
		"express": "^4.18.2",
