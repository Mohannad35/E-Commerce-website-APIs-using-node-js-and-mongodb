<head>
	<meta charset="UTF-8" />
	<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
		rel="stylesheet"
		integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
		crossorigin="anonymous"
	/>

	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<!-- Box icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<link
		rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
	/>
	<!-- Custom StyleSheet -->
	<link rel="stylesheet" href="./css/styles.css" />
	<title>Login</title>
</head>

<body>
	<div class="navigation" style="padding-right: 1000px">
		<div class="nav-center container d-flex">
			<a href=" index.html" class="logo">
				<h1 style="padding-top: 30px; color: #1c2260; font-size: 30px">E-Commerce</h1>
			</a>
		</div>
	</div>
	<section class="vh-100">
		<div class="container-fluid h-custom">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-md-9 col-lg-6 col-xl-5">
					<img
						src="images/login2.png"
						class="img-fluid"
						alt="Sample image"
						style="padding-bottom: 80px"
					/>
				</div>

				<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
					<form action="http://localhost:5000/login" method="post">
						<div
							class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start"
						>
							<p class="lead fw-normal mb-0 me-3" style="font-size: 20px">Sign in with</p>
							<button
								type="button"
								class="btn btn-primary btn-floating mx-1"
								style="padding: 15px; border-radius: 100%; background-color: #a04daf"
							>
								<i
									class="fa fa-facebook"
									style="font-size: 15px; text-decoration: none; text-align: center"
								></i>
							</button>

							<button
								type="button"
								class="btn btn-primary btn-floating mx-1"
								style="padding: 15px; border-radius: 100%; background-color: #a04daf"
							>
								<i class="fa fa-twitter" style="font-size: 15px; text-decoration: none"></i>
							</button>

							<button
								type="button"
								class="btn btn-primary btn-floating mx-1"
								style="padding: 15px; border-radius: 100%; background-color: #a04daf"
							>
								<i class="fa fa-google" style="font-size: 15px; text-decoration: none"></i>
							</button>
						</div>

						<div class="divider d-flex align-items-center my-4">
							<p class="text-center fw-bold mx-3 mb-0">Or</p>
						</div>

						<p>
							<span class="errorMessage"> <%= errorMessage %> </span>
						</p>

						<!-- Email input -->
						<div class="form-outline mb-4">
							<input
								type="email"
								id="form3Example3"
								class="form-control form-control-lg"
								placeholder="Email Address"
								name="email"
								style="font-size: x-large"
								required
							/>
						</div>

						<!-- Password input -->
						<div class="form-outline mb-3">
							<input
								type="password"
								id="form3Example4"
								class="form-control form-control-lg"
								placeholder="Password"
								name="password"
								style="font-size: x-large"
								required
							/>
						</div>

						<div class="d-flex justify-content-between align-items-center">
							<!-- Checkbox -->

							<div class="form-check mb-0">
								<input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
								<label class="form-check-label" for="form2Example3"> Remember me </label>
							</div>
							<a href="#!" class="text-body">Forgot password?</a>
						</div>

						<div class="text-center text-lg-start mt-4 pt-2">
							<button
								type="submit"
								class="btn btn-primary btn-lg"
								style="
									padding-left: 2.5rem;
									padding-right: 2.5rem;
									background-color: #a04daf;
									font-size: larger;
								"
							>
								Login
							</button>
							<p class="small fw-bold mt-2 pt-1 mb-0">
								Don't have an account? <a href="#!" class="link-danger">Register</a>
							</p>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</body>
